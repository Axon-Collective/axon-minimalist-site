{{!--

On every 3rd post, add a special .post-card-large class and load a large image
For the rest, just output a smaller background image

--}}

{{#has number="nth:3"}}
<article class="post-card {{post_class}} post-card-large no-image " {{#if feature_image}} style="background-image: url({{img_url feature_image size="xl"}})"{{/if}}>
{{else}}
<article class="post-card {{post_class}} no-image" {{#if feature_image}} style="background-image: url({{img_url feature_image size="l"}})"{{/if}}>
{{/has}}
	<span style="position:absolute; top:0;bottom:0;left:0;right:0;background:rgba(1,1,1,0.5);"></span>
    <a class="post-card-link" href="{{url}}">
        <div class="post-card-content">
            <h2 class="post-card-title">{{title}}</h2>
        </div>
    </a>
</article>
