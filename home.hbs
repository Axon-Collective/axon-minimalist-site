{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}


{{#is "home"}}
    {{#if @site.description}}
    <header class="page-head" style="padding:2%">
        <h2 class="page-head-title">{{@site.description}}</h2>
    </header>
    {{/if}}
{{/is}}

{{#if @site.cover_image}}
<div style="display:flex; flex-direction:column; justify-content:center; align-items:center;">
	<img style="margin:auto; width:auto; height:25vh" src="{{@site.cover_image}}" alt="{{@site.title}}" />
</div>
{{/if}}

{{#page}}
<article class="post-content {{post_class}} {{#unless feature_image}}no-image{{/unless}}">
	{{!--
    <header class="post-content-header">
        <h1 class="post-content-title">{{title}}</h1>
    </header>
	--}}
    {{#if feature_image}}
    <div class="post-content-image">
        <img class="kg-image" src="{{feature_image}}" alt="{{title}}" />
    </div>
    {{/if}}

    <div class="post-content-body">
        {{content}}
    </div>

</article>
{{/page}}
